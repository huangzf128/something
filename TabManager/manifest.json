{

  "description": "save memory, sync tab",
  "manifest_version": 2,
  "name": "TabManager",
  "version": "1.0",
  "homepage_url": "https://github.com/",
  "icons": {
    "48": "icons/ghost.png"
  },

  "applications": {
    "gecko": {
      "id": "huangzf128@gmail.com",
      "strict_min_version": "1.0"
    }
  },
  "permissions": [
    "storage", "tabs"
  ],

  "browser_action": {
    "default_icon": {
     "32" : "icons/ghost.png"
    },
    "default_title": "TabManager",
    "default_popup": "popup/panel.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["tabManager.js"]
    }
  ]

}
